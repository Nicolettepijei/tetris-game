{
  "name": "mimstris",
  "version": "0.0.1",
  "description": "A challenging puzzle game, just for funsies",
  "main": "main.js",
  "repository": {
    "url": "https://github.com/mimshwright/mimstris",
    "type": "git"
  },
  "author": "Mims H. Wright",
  "license": "MIT",
  "dependencies": {
    "lodash": "^4.17.4",
    "pressed": "^1.2.0"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.18.0",
    "babel-register": "^6.18.0",
    "standard": "^8.6.0",
    "webpack": "^1.14.0"
  },
  "optionalDependencies": {
    "nyc": "^10.1.2",
    "yarn": "^0.19.1"
  },
  "scripts": {
    "lint": "standard './*.js' './src/**/*.js'",
    "fix": "standard --fix './*.js' './src/**/*.js'",
    "test": "ava",
    "coverage": "nyc npm run test",
    "build": "webpack --config webpack.config.babel.js",
    "watch": "webpack --watch --config webpack.config.babel.js",
    "start": "npm run fix && npm run test && npm run watch && open dist/index.html"
  },
  "ava": {
    "files": [
      "test/**/*.js"
    ],
    "source": [
      "src/**/*.{js,jsx}"
    ],
    "concurrency": 20,
    "failFast": true,
    "tap": false,
    "powerAssert": false,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  }
}
